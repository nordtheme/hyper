{
  "name": "@nordtheme/hyper",
  "version": "0.5.0",
  "description": "An arctic, north-bluish clean and elegant Hyper theme plugin",
  "author": {
    "name": "Sven Greb",
    "email": "development@svengreb.de",
    "url": "https://www.svengreb.de"
  },
  "homepage": "https://www.nordtheme.com/ports/hyper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nordtheme/hyper.git"
  },
  "bugs": {
    "url": "https://github.com/nordtheme/hyper/issues"
  },
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=15.13",
    "npm": ">=7.7"
  },
  "main": "index.js",
  "keywords": [
    "arctic",
    "north",
    "bluish",
    "clean",
    "elegant",
    "hyper",
    "hyperterm",
    "hyper-theme"
  ],
  "scripts": {
    "format": "run-s format:js format:pretty",
    "format:js": "eslint --fix",
    "format:pretty": "prettier --write .",
    "lint": "run-s lint:md lint:pretty",
    "lint:ci": "run-s lint:ci:* lint:js lint:md",
    "lint:ci:pretty": "prettier --loglevel silent --check .",
    "lint:js": "eslint .",
    "lint:md": "remark --no-stdout . \".github/**/*.md\"",
    "lint:pretty": "prettier --check .",
    "prepare:husky": "husky install",
    "prepare": "run-s prepare:*"
  },
  "devDependencies": {
    "@arcticicestudio/eslint-config-base": ">=0.11.0 <=1.0.0",
    "@arcticicestudio/remark-preset-lint": ">=0.4.0 <1.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "remark-cli": "11.0.0"
  }
}
